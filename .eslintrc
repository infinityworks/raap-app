{
  "extends": "airbnb",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "jest": true
  },
  "plugins": [
    "react",
    "jest"
  ],
  "rules": {
    "react/jsx-closing-tag-location": 0,
    "react/jsx-filename-extension": 0,
    "react/forbid-prop-types": 0,
    "react/no-array-index-key": 0,
    "object-curly-newline": 0,
    "arrow-parens": 0,
    "import/no-extraneous-dependencies": "off",
    "radix": "off",
    "no-return-await": "off"
  },
  "overrides": [
    {
      "files": [ "**/*.test.js" ],
      "globals": {
        "snapshot": true,
        "snapshotWithTheme": true,
        "mount": true,
        "mountWithTheme": true,
        "shallow": true,
        "shallowWithTheme": true,
        "render": true,
        "renderWithTheme": true
      }
    }
  ]
 }